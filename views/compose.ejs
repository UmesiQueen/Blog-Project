<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
      <label for="title" class="form-label">Title</label>
      <input id="title" class="form-control" type="text" name="postTitle" autocomplete="off" />
  
      <label for="body" class="form-label">Post</label>
      <textarea id="body" class="form-control" name="postBody" cols="30" rows="10"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
